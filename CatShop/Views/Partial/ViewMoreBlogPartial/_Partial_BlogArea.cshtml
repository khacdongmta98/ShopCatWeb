@model IEnumerable<CatShop.Models.CustomBlog>

<section class="blog_area single-post-area py-80px section-margin--small">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 posts-list">
                <div class="single-post row">

                    <article class="col-lg-12">
                        <div class="feature-img">
                            <img src="~/@Model.FirstOrDefault().img" style="width:640px;height:285px" alt="">
                        </div>
                        <div class="col-lg-3  col-md-3">
                            <div class="blog_info text-right">
                                <div class="post_tag">
                                    <a href="#">Beautiful Cat,</a>
                                    <a class="active" href="#">PET,</a>

                                </div>
                                <ul class="blog_meta list">
                                    <li>
                                        <a href="#"> Cat,</a>

                                    </li>
                                    <li>
                                        <a href="#">
                                            @Model.FirstOrDefault().ThoiGian
                                            <i class="lnr lnr-calendar-full"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            @Model.FirstOrDefault().slview
                                            <i class="lnr lnr-eye"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            @Model.FirstOrDefault().Sumcomment Comment
                                            <i class="lnr lnr-bubble"></i>
                                        </a>
                                    </li>
                                </ul>
                                <ul class="social-links">
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-facebook-f"></i>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="#">
                                            <i class="fab fa-twitter"></i>
                                        </a>
                                    </li>

                                    <li>
                                        <a href="#">
                                            <i class="fab fa-behance"></i>
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>


                        <div class="col-lg-9 col-md-9 blog_details">
                            <h2>@Model.FirstOrDefault().Title</h2>

                            <p> @Model.FirstOrDefault().NoiDung</p>

                        </div>

                    </article>


                    <div class="comments-area">
                        <h4>@Model.FirstOrDefault().Sumcomment Comment</h4>
                        @foreach (var item in Model)
                        {
                            <div class="comment-list">
                                <div class="single-comment justify-content-between d-flex">
                                    <div class="user justify-content-between d-flex">
                                        <div class="thumb">
                                            <img src="img/blog/c1.jpg" alt="">
                                        </div>
                                        <div class="desc">
                                            <h5>
                                                <a href="#">@item.Hoten</a>
                                            </h5>
                                            <p class="date">@item.ThoiGianCM </p>
                                            <p class="comment">
                                                @item.NoiDungCM
                                            </p>
                                        </div>
                                    </div>
                                    <div class="reply-btn">
                                        <a href="#" class="btn-reply text-uppercase">reply</a>
                                    </div>
                                </div>
                            </div>
                        }


                    </div>
                    <div class="comment-form">
                        <h4>Leave a Reply</h4>
