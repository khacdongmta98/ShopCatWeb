                        <form class="form" action="PostComment" method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <input name="id" type="text" style="display:none;" class="form-control" id="Ma_Blog" placeholder="Ma_Blog" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Ma_Blog'" value="@Model.FirstOrDefault().Ma_blog">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="HoTen" id="HoTen" placeholder="HoTen" onfocus="this.placeholder = ''" onblur="this.placeholder = 'HoTen'">
                            </div>
                            <div class="form-group">
                                <textarea class="form-control mb-10" rows="5" name="NoiDung" placeholder="NoiDung" onfocus="this.placeholder = ''" onblur="this.placeholder = 'NoiDung'"
                                          required=""></textarea>
                            </div>
                            <div class="button button-btn">
                                <input type="submit" value="Post Comment" />
                            </div>
                        </form>


                    </div>
                </div>

            </div>
