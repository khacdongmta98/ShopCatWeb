<link href="~/Content/css/defaultSize.css" rel="stylesheet" />

<section class="blog">
    <div class="container">
        <div class="section-intro pb-60px">
            <p>Popular Item in the market</p>
            <h2>Latest <span class="section-intro__style">News</span></h2>
        </div>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4 mb-lg-0">
                <div class="card card-blog">
                    <div class="card-blog__img">
                        <img class="card-img rounded-0"src=@item.img alt="">
                    </div>
                    <div class="card-body">
                        <ul class="card-blog__info">
                            <li><a href="#">By Admin</a></li>
                            <li><a href="#"><i class="ti-comments-smiley"></i>2 Comments</a></li>
                        </ul>
                        <h4 class="card-blog__title"><a href="single-blog.html">@item.Title</a></h4>
                        <p>@item.NoiDung</p>
                        
                            <div  class="nav-link dropdown-toggle" role="button" >
                                @Html.ActionLink("View more", "Blog")
                            </div>
                        
                    </div>
                </div>
            </div>
            } 

            

            
        </div>
    </div>
</section>
