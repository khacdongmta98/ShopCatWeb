     $('.btnSuaDuLieu').on('click', function (x) {
         x.preventDefault();
         var idBlog = $(this).closest('tr').attr('id');
         setTimeout(100);
         var parent = $(this).closest('tr');
         alert(idBlog);
         $ajax(
             {
               
             });
         
     });
     
 </script>
